// This program shows how method closures can be returned by other
// methods, bound to local variables, and then invoked.

class A {
  var c;
  method A() {
    c = 0;
  }
  method inc() {
    ++c;
  }
}

class B {
  var a = new A(), m = a.inc, x = 0;
  method B() {
    print(a.c, " ");
    m();
    print(a.c, " ");
  }
  method getM() {
    return m;
  }
}

class Main {
  var f;
  method Main() {
    var b = new B();
    var t = f = b.getM();
    f();
    print(b.a.c, " ");
    t();
    print(b.a.c, " ");
    (b.getM())();                 // shows the higher-order aspect of KOOL
    print(b.a.c, "\n");
  }
}

