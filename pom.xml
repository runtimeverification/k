<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kframework.k</groupId>
  <artifactId>parent</artifactId>
  <packaging>pom</packaging>
  <version>3.5-SNAPSHOT</version>
  <name>K Framework Tool Parent</name>

  <modules>
    <module>k-core</module>
    <module>k-distribution</module>
  </modules>

  <scm>
    <connection>scm:git:https://github.com/kframework/k.git</connection>
  </scm>

  <repositories>
    <repository>
      <id>runtime-verification</id>
      <name>Runtime Verification Repository</name>
      <url>http://office.runtimeverification.com:8888/repository/internal</url>
      <snapshots><enabled>false</enabled></snapshots>
      <releases><enabled>true</enabled></releases>
    </repository>
    <repository>
      <id>runtime-verification.snapshots</id>
      <name>Runtime Verification Snapshot Repository</name>
      <url>http://office.runtimeverification.com:8888/repository/snapshots</url>
      <snapshots><enabled>true</enabled></snapshots>
      <releases><enabled>false</enabled></releases>
    </repository>
  </repositories>

  <properties>
    <base>master</base>
    <skipCheckstyleOnWindows>true</skipCheckstyleOnWindows>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <includeFilterFile>src/main/config/findbugs-include.xml</includeFilterFile>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.1</version>
          <configuration>
            <source>1.7</source>
            <target>1.7</target>
            <useIncrementalCompilation>false</useIncrementalCompilation>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <version>2.6</version>
        </plugin>
        <plugin>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.1</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/javasources</directory>
            </fileset>
            <fileset>
              <directory>lib</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <!-- The following execution is used to get the list of changed files to
               run the copyright check on. -->
          <execution>
            <id>init-changed-files</id>
            <phase>pre-integration-test</phase>
            <configuration>
              <target>
                <exec executable="git" outputproperty="git.diff.out" failifexecutionfails="false">
                  <arg value="diff" />
                  <arg value="${base}" />
                  <arg value="--name-only" />
                  <arg value="--diff-filter=ACDMTUXB" />
                </exec>
                <condition property="git.diff.out" value="">
                  <isset property="git.diff.out" />
                </condition>
                <filelist id="git.diff.filelist" dir="." files="${git.diff.out}" />
                <pathconvert property="git.modified.files" pathsep="," refid="git.diff.filelist" dirsep="/">
                  <map from="${basedir}/" to="" />
                </pathconvert>
              </target>
              <exportAntProperties>true</exportAntProperties>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>1.3</version>
        <executions>
          <execution>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <inherited>false</inherited>
        <configuration>
          <doCheck>false</doCheck>
          <doUpdate>false</doUpdate>
          <shortRevisionLength>7</shortRevisionLength>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.12.1</version>
        <executions>
          <execution>
            <id>checkstyle-copyright</id>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}</sourceDirectory>
              <includes>${git.modified.files}</includes>
              <configLocation>src/main/config/checkstyle-copyright.xml</configLocation>
              <failsOnError>true</failsOnError>
              <consoleOutput>true</consoleOutput>
              <excludes>**/com/davekoelle/**,**/src/main/sdf/syntax/Integration.sdf</excludes>
            </configuration>
          </execution>
          <execution>
            <id>checkstyle-k</id>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}</sourceDirectory>
              <includes>**/*.k</includes>
              <configLocation>src/main/config/checkstyle-k.xml</configLocation>
              <failsOnError>true</failsOnError>
              <consoleOutput>true</consoleOutput>
            </configuration>
          </execution>
          <execution>
            <id>checkstyle-java</id>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <sourceDirectory>src</sourceDirectory>
              <includes>**/*.java</includes>
              <configLocation>src/main/config/checkstyle-java.xml</configLocation>
              <suppressionsLocation>src/main/config/checkstyle-suppress.xml</suppressionsLocation>
              <failsOnError>true</failsOnError>
              <consoleOutput>true</consoleOutput>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <tagNameFormat>v@{project.version}</tagNameFormat>
          <pushChanges>false</pushChanges>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <family>Unix</family>
          <name>!mac os x</name>
        </os>
      </activation>
      <properties>
        <native.library.type>so</native.library.type>
        <native.library.prefix>lib</native.library.prefix>
        <native.os.classifier>linux</native.os.classifier>
        <native.classifier>linux${native.arch.classifier}</native.classifier>
        <native.script.type>sh</native.script.type>
        <native.exe.type>uexe</native.exe.type>
        <native.exe.extension></native.exe.extension>
        <native.script.extension></native.script.extension>
        <native.path.variable>LD_LIBRARY_PATH</native.path.variable>
      </properties>
    </profile>
    <profile>
      <id>mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <native.library.type>dylib</native.library.type>
        <native.library.prefix>lib</native.library.prefix>
        <native.os.classifier>osx</native.os.classifier>
        <native.classifier>osx</native.classifier>
        <native.script.type>sh</native.script.type>
        <native.exe.type>uexe</native.exe.type>
        <native.exe.extension></native.exe.extension>
        <native.script.extension></native.script.extension>
        <native.path.variable>DYLD_LIBRARY_PATH</native.path.variable>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <activation>
        <os>
          <family>Windows</family>
        </os>
      </activation>
      <properties>
        <native.library.type>dll</native.library.type>
        <native.library.prefix></native.library.prefix>
        <native.os.classifier>windows</native.os.classifier>
        <native.classifier>windows${native.arch.classifier}</native.classifier>
        <native.script.type>bat</native.script.type>
        <native.exe.type>exe</native.exe.type>
        <native.exe.extension>.exe</native.exe.extension>
        <native.script.extension>.bat</native.script.extension>
        <native.path.variable>PATH</native.path.variable>
        <checkstyle.skip>${skipCheckstyleOnWindows}</checkstyle.skip>
      </properties>
    </profile>

    <profile>
      <id>amd64</id>
      <activation>
        <os>
          <arch>amd64</arch>
        </os>
      </activation>
      <properties>
        <native.arch.classifier>64</native.arch.classifier>
      </properties>
    </profile>
    <profile>
      <id>x64</id>
      <activation>
        <os>
          <arch>x64</arch>
        </os>
      </activation>
      <properties>
        <native.arch.classifier>64</native.arch.classifier>
      </properties>
    </profile>
    <profile>
      <id>x86_64</id>
      <activation>
        <os>
          <arch>x86_64</arch>
        </os>
      </activation>
      <properties>
        <native.arch.classifier>64</native.arch.classifier>
      </properties>
    </profile>

    <profile>
      <id>x86</id>
      <activation>
        <os>
          <arch>x86</arch>
        </os>
      </activation>
      <properties>
        <native.arch.classifier>32</native.arch.classifier>
      </properties>
    </profile>
    <profile>
      <id>i386</id>
      <activation>
        <os>
          <arch>i386</arch>
        </os>
      </activation>
      <properties>
        <native.arch.classifier>32</native.arch.classifier>
      </properties>
    </profile>
  </profiles>
</project>
