  including META-MODULE .
  op klist : Nat Qid Type -> Attr .
  op klist : Nat Term -> Attr .
endfm

fmod STRICT-ATTRS is
  including META-MODULE .
  including NAT-LIST-EXTRAS .
  including LIST-ATTRS .
